<div class="scroll-watcher"></div>
<div class="container-float shadow rounded text-muted full-page" id="open-letter">
  <%= render partial: "header" %>
  <div class="row page-introduction">
    <div class="col col-8 offset-2 col-md-6 offset-md-3">
      <%= markdown_render(@page_introduction_content) %>
    </div>
  </div>
</div>

<div class="container-fluid open-letter-container">
  <div class="row">
    <div class="col col-sm-8 offset-sm-2 open-letter-content">
      <div class="letter-frame p-4 p-lg-5">
        <%= markdown_render(@open_letter_content) %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid rounded text-muted full-page" id="open-letter">
  <div class="row the-ask">
    <a href="mailto:elsa.pullman@blueventures.org?subject=I want to sign the Make Fishing Fair open letter"
      class="sign-letter-button"
      style="text-decoration: none"
      target="_"
      aria-label="Link to email to become a signatory"
    >
      <button type="button" class="btn btn-primary on-brandy">Sign the letter</button>
    </a>
  </div>
  <div class="row below-letter">
    <div class="col col-10 offset-1 col-xl-8 offset-xl-2">
      <%= render partial: "letter_translations", locals: { letter_translations: @letter_translations } unless @letter_translations.empty? %>
    </div>
  </div>

  <div class="row after-letter">
    <div class="col col-10 offset-1 col-xl-8 offset-xl-2 trans-signatories">
      <%= render partial: "signatories", locals: { signatories: @signatories } %>
      <%= markdown_render(@research_content) %>

    </div>
  </div>
</div>
<%= render partial: "supporting_organisations_carousel", locals: { supporting_organisations: @supporting_organisations } %>

<style>
.scroll-watcher {
  height: 4px;
  position: fixed;
  top: 0;
  z-index: 1000;
  background-image: linear-gradient(#04141f, #dbbc8f);
  width: 0%;
  animation: scroll-watcher linear;
  animation-duration: 1ms; /* Firefox requires this to apply the animation */
  animation-timeline: scroll(root);
  opacity: 75%;
}

.parallax-header {
  background-color: #869891 !important;
